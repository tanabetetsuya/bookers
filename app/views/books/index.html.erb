<p id="notice">
 <%= notice %>
</p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th></th>
    </tr>
  </thead>

<tbody>
  <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to 'show', book_path(book.id), class: "btn-primary" %>
      <%= link_to 'edit', edit_book_path(book.id), class: "btn-primary" %>
      <%= link_to 'destroy', book_path(book.id), class: "btn-primary", method: :delete, "data-confirm" => "Are You Sure?" %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>


<h1>New Book</h1>
<% if @book.errors.any? %>
  <div>
    <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
  <div><% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  </div>
<% end %>
<%= form_with model:@book, local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<br><%= f.submit 'Create Book', class: "btn" %></br>
<% end %>
