<h1>Books</h1>
<div>
  <h4>Title</h4>
  <h4>Body</h4>
</div>
<div>
  <%= @books.each do |book| %>
    <p><%= book.title %></p>
    <p><%= book.body %></p>
    <%= link_to 'show', book_path(book.id) %>
    <%= link_to 'edit', edit_book_path(book.id) %>
    <%= link_to 'destroy', book_path(book.id), method: :delete %>
  <% end %>
</div>